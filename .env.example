# SMTP configuration (use your provider)
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
FROM_EMAIL=alerts@yourdomain.com
TO_EMAIL=you@yourdomain.com

# CORS: comma-separated origins allowed to call this API (e.g., your Vercel site)
ALLOWED_ORIGINS=https://your-vercel-site.vercel.app,https://yourcustomdomain.com

# Environment
NODE_ENV=production

# Optional: port (defaults to 3001)
# PORT=3001

# Rate limit (optional overrides)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

PORT=3001
